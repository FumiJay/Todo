                  ColumnDefinitions="Auto, 2*"
                  BindingContext="{x:Reference slider}">

                <Label Grid.Row="0"
                    Grid.ColumnSpan="2"
                    FontSize="{Binding Value}"
                    Text="Wlecome TodoPage"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />

                <!--(1,0)-->
